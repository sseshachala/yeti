<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= gravatar_for user, :size => 30 %></td>
    <td><%= user["username"] %></td>
    <td><%= user["email"] %></td>
    <td><%= link_to 'Show', show_path("users",  user["username"]) %></td>
    <td><%= link_to 'Edit', edit_path("users",  user["username"]) %></td>
    <td><%= link_to 'Destroy', show_path("users",  user["username"]), :confirm => 'Are you sure?', :method => :delete %></td>    
  </tr>
<% end %>
</table>

