<!-- 100% Box Grid Container: Start -->
<div class="grid_24">

	<!-- Box Header: Start -->
	<div class="box_top">
		
		<a name="news"></a>
		<h2 class="icon pages">Monitors<span class="tip" title="Tips can be added everywhere">232</span></h2>
		
		<!-- Tab Select: Start -->
		<ul class="sorting">
			<li><a href="#listing" class="active">Listing</a></li>
			<li><a href="#addnews">Add Monitors</a></li>
		</ul>
		<!-- Tab Select: End -->
		
	</div>
	<!-- Box Header: End -->
	
	<!-- Box Content: Start -->
	<div class="box_content">
		
		<!-- News Table Tabs: Start -->
		<div class="tabs">
		
			<!-- News Sorting Table: Start -->
			<div id="listing">
				
				<table class="sorting">
					<thead>
						<tr>
							
							<th class="align_left">Every</th>
							<th class="align_left center">Test</th>
							<th class="align_left center">url</th>
							<th class="align_left center">Status</th>
							<th class="align_left center">State</th>
                                                        <th class="align_left center"></th>
							<th class="align_left center tools">Tools</th>
						</tr>
					</thead>
					<tbody>
<%if @rmonitors == [] %>
 <div>
   <%= "No monitors found" %>
 </div>
<% else %>

<% @rmonitors.each do |rmonitor| %>
						
						<tr>
							
							<td class="align_left center"><%= rmonitor["every"] %></td>
							<td class="align_left center">my blog url Test</td>
							<td class="align_left center"><a href="<%= rmonitor["url"] %>"><%= rmonitor["url"] %></td>
							<td class="align_left center"><%= rmonitor["status"] %></td>
                                                    <% if rmonitor["state"] == "stopped" %>
                                                        <td class="align_left center"><%= "Paused" %></td>
                                                    <% else %>
                                                        <td class="align_left center"><%= rmonitor["state"] %></td>
                                                    <% end %>
                                                      
    <% if rmonitor["state"] == "stopped" %>
    <td><%= link_to 'Restart', path_for("rmonitors",  rmonitor["_id"], "restart"), :confirm => 'Are you sure?', :method => :put, :class => "align_left center"%></td>
    <% elsif rmonitor["state"] == "active" %>
    <td><%= link_to 'Pause', path_for("rmonitors",  rmonitor["_id"], "pause"), :confirm => 'Are you sure?', :method => :put, :class => "align_left center" %></td>
    <% end %>
 
							
                                                        
							<td class="align_left tools center">
                 <%= link_to 'Edit', edit_path("rmonitors",  rmonitor["_id"]), :title => "edit",:class =>"edit tip"  %>
                 <%= link_to 'Show', show_path("rmonitors",  rmonitor["_id"]),:title => "view",:class=> "view tip" %>
                 <%= link_to 'Destroy', show_path("rmonitors",  rmonitor["_id"]), :confirm => 'Are you sure?', :method => :delete,:title => "delete", :class => "delete tip" %>
								
							</td>
						</tr>
<% end %>
<% end %>			
					</tbody>
				</table> 
				
			</div>
			<!-- News Sorting Table: End -->
			
			<!-- News Sorting Table - Add News Tab: Start -->
			<div id="addnews" class="padding">
				
				<p class="note">
					<span class="icon info"></span> 
					display rails flash messages here
				</p>

				<div class="field">
					<label class="left">Every</label>
					<input type="text" class="left validate">
					<p class="error left small nomargin">
						<span class="icon cross"></span> 
						Let the users know what the problem is
					</p>
				</div>


				
				<div class="field">
					<label class="left">Test description</label>
					<input type="text" class="left validate">
					<p class="error left small nomargin">
						<span class="icon cross"></span> 
						Let the users know what the problem is
					</p>
				</div>

				<div class="field">
					<label class="left">Contact</label>
					<input type="text" value="nycnightlife2012@gmail.com" class="left validate" disabled>
					
				</div>
				
				<div class="field">
					<label class="left">URL</label>
					<input type="text" class="left validate tip-stay" title="Add a tip for focus!">
					<p class="info left small nomargin">
						<span class="icon info"></span> 
						Or some information about what they should write
					</p>
				</div>

				<div class="field">
					<label class="left">Notify Interval</label>
					<input type="text" class="left validate tip-stay" title="Add a tip for focus!">
					<p class="info left small nomargin">
						<span class="icon info"></span> 
						Or some information about what they should write
					</p>
				</div>
				
			  <button>Add Monitor</button>
			  <button class="secondary" type="reset">Reset</button>
			  <!--<button disabled="">Disabled Button</button>-->
				
			</div>
			<!-- News Sorting Table - Add News Tab: End -->
		
		</div>
		<!-- News Table Tabs: End -->

	</div>
	<!-- Box Content: End -->
	
</div>
<!-- 100% Box Grid Container: End -->
