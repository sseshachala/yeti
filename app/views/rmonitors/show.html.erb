<!-- 100% Box Grid Container: Start -->
<div class="grid_24">

	<!-- Info Notice: Start -->
<% if flash[:notice] %>
	<div class="notice info">
		<p><%= flash[:notice] %></p>
	</div>
 <% end %>
	<!-- Info Notice: End -->

	<!-- Box Header: Start -->
	<div class="box_top">
		
		<a name="news"></a>
		<h2 class="icon pages">Monitors</h2>
		
		<!-- Tab Select: Start -->
		<ul class="sorting">
			<li><a href="#viewmonitor" class="active">View</a></li>
			<li><a href="#editmonitor">Edit</a></li>
		</ul>
		<!-- Tab Select: End -->
		
	</div>
	<!-- Box Header: End -->
	
	<!-- Box Content: Start -->
	<div class="box_content padding">
		
		<!-- News Table Tabs: Start -->
		<div class="tabs">
		
			<!-- News Sorting Table: Start -->
			<div id="viewmonitor">
				
			<p id="notice"><%= notice %></p>

                        <h1><%= @rmonitor_hash["test"] %></h1>

<div>
  <b>This monitor tests:</b>
  <%= @rmonitor_hash["describe_test_result"] %>
</div>

<div>
  <b>Creation Date:</b>
  <%= @rmonitor_hash["creation_date"] %>
</div>

<div>
  <b>Runs Every:</b>
  <%= @rmonitor_hash["every"] %>
</div>

<div>
  <b>Test:</b>
  <%= @rmonitor_hash["test"] %>
</div>

<div>
  <b>Contact:</b>
  <%= @rmonitor_hash["contact"] %>
</div>

<div>
  <b>Url:</b>
  <%= @rmonitor_hash["url"] %>
</div>

<div>
  <b>Notify interval:</b>
  <%= @rmonitor_hash["notify_interval"] %>
</div>

<div>
  <b>State:</b>
  <%= @rmonitor_hash["State"] %>
</div>

<div>
  <b>Last test result:</b>
  <%= @rmonitor_hash["last_test_result"] %>
</div>

<div>
  <b>Status:</b>
  <%= @rmonitor_hash["status"] %>
</div>

<div>
  <b>Number of tests Passed:</b>
  <%= @rmonitor_hash["num_tests_passed"] %>
</div>

<div>
  <b>Number of tests Failed:</b>
  <%= @rmonitor_hash["num_tests_failed"] %>
</div>

<div>
  <b>Time of last test:</b>
  <%= @rmonitor_hash["time_of_last_test"] %>
</div>

<div>
  <b>Total number of tests:</b>
  <%= @rmonitor_hash["total_num_tests"] %>
</div>

	
				
			</div>
			<!-- News Sorting Table: End -->
			
			<!-- News Sorting Table - Add News Tab: Start -->
			<div id="editmonitor" class="padding">
			<%= render 'update_form' %>	
			</div>
			<!-- News Sorting Table - Add News Tab: End -->
		
		</div>
		<!-- News Table Tabs: End -->

	</div>
	<!-- Box Content: End -->
	
</div>
<!-- 100% Box Grid Container: End -->
